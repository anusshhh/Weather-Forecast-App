<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/iv_location"
            android:layout_width="230dp"
            android:layout_height="340dp"
            android:layout_marginTop="@dimen/dimen_50dp"
            android:src="@drawable/ic_enable_location"
            app:layout_constraintBottom_toTopOf="@id/tv_ask_location_permission"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_ask_location_permission"
            android:layout_width="@dimen/dimen_300dp"
            android:layout_height="wrap_content"
            android:text="@string/ask_location_permission"
            android:textAlignment="center"
            android:textSize="@dimen/dimen_20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_location" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_enable_location"
            android:layout_width="@dimen/dimen_380dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:backgroundTint="@color/sky_blue"
            android:padding="@dimen/dimen_16dp"
            android:text="@string/enable_location"
            android:textSize="@dimen/dimen_20sp"
            app:cornerRadius="@dimen/dimen_7dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_ask_location_permission" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
